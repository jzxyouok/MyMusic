<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:dividerHeight="1px"
                android:divider="#d2000000"
                android:id="@+id/lst_show_local_singer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
            <zhiyuan3g.com.mymusic.view.SideBar
                android:id="@+id/local_singer_sidebar"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/txt_show_local_singer_aToz"
                android:layout_width="40.0dip"
                android:layout_marginTop="10dp"
                android:layout_height="40.0dip"
                android:layout_toLeftOf="@+id/local_singer_sidebar"
                android:background="@drawable/zimu_text"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="15.0dip"
                android:visibility="invisible" />
        </RelativeLayout>
    </FrameLayout>


</LinearLayout>