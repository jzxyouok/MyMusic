<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <ImageView
            android:id="@+id/img_show_local_holder_icon"
            android:background="@drawable/local_misic_path"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_show_local_holder_fileName"
                android:text="不想放手"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_show_local_holder_singer_count"
                    android:layout_marginTop="5dp"
                    android:text="11首"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_show_local_holder_singer_path"
                    android:layout_marginTop="5dp"
                    android:text="11首"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>