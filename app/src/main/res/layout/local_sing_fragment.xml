<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"

        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/img_btn_random_play"
            android:layout_centerVertical="true"
            android:background="@drawable/random_play"
            android:layout_marginLeft="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:text="随机播放"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_btn_random_play"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="批量操作"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/lst_show_local_sing"
                android:dividerHeight="1px"
                android:divider="#d2000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>

            <TextView
                android:id="@+id/txt_show_aToz"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_toLeftOf="@+id/sidebar"
                android:background="@drawable/zimu_text"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="15.0dip"
                android:visibility="invisible" />

            <zhiyuan3g.com.mymusic.view.SideBar
                android:id="@+id/sidebar"
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|center"/>
        </RelativeLayout>


    </FrameLayout>


</LinearLayout>