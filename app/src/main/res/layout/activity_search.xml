<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@drawable/background_three"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btn_img_back_search_to_local"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back_main"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/et_show_search"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:hint="歌曲/歌手"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_show_search_back"
                android:text="取消"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_search_bg"
        android:orientation="vertical"
        android:background="@drawable/back_local"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lst_show_search_local_sing"
            android:dividerHeight="1px"
            android:divider="#d2000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
</LinearLayout>
