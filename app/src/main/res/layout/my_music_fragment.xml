<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ly_main_weixin"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" >

	<LinearLayout
		android:id="@+id/local_line_one"
		android:background="@drawable/backgr"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:layout_width="match_parent"
		android:layout_height="60dp">
		<ImageView
			android:src="@drawable/person_icn"
			android:layout_marginLeft="20dp"
			android:layout_width="42dp"
			android:layout_height="42dp" />
		<LinearLayout
			android:layout_marginLeft="15dp"
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView
				android:text="点击登录"
				android:textSize="17sp"
				android:textColor="#ffffff"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView
				android:layout_marginTop="5dp"
				android:text="登录后可以享受云同步"
				android:textSize="12sp"
				android:textColor="#c1c1c1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<!-- android:textColor="#969696"-->
	</LinearLayout>

	<LinearLayout
		android:background="@drawable/backgr"
		android:layout_marginTop="10dp"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="120dp">
		<LinearLayout
			android:id="@+id/line_localMusic"
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:gravity="center"
			android:layout_height="match_parent">
			<ImageButton
				android:id="@+id/btn_img_localMusic"
				android:background="@drawable/location_img"
				android:layout_width="44dp"

				android:layout_height="44dp" />
			<TextView
				android:textColor="#ffffff"
				android:text="本地歌曲"
				android:layout_marginTop="6dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView
				android:id="@+id/txt_show_number_of_songs"
				android:textColor="#c1c1c1"
				android:text="0"
				android:layout_marginTop="6dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/line_down"
			android:gravity="center"
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="match_parent">
			<ImageButton
				android:background="@drawable/down_music"
				android:layout_width="44dp"
				android:layout_height="44dp" />
			<TextView
				android:textColor="#ffffff"
				android:text="下载管理"
				android:layout_marginTop="6dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView
				android:textColor="#c1c1c1"
				android:text="0"
				android:layout_marginTop="6dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/line_player"
			android:gravity="center"
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="match_parent">
			<ImageButton
				android:background="@drawable/order_play"
				android:layout_width="44dp"
				android:layout_height="44dp" />
			<TextView
				android:textColor="#ffffff"
				android:text="最近播放"
				android:layout_marginTop="6dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView
				android:textColor="#c1c1c1"
				android:text="0"
				android:layout_marginTop="6dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<!--<LinearLayout-->
			<!--android:id="@+id/line_MV"-->
			<!--android:gravity="center"-->
			<!--android:orientation="vertical"-->
			<!--android:layout_weight="1"-->
			<!--android:layout_width="0dp"-->
			<!--android:layout_height="match_parent">-->
			<!--<ImageButton-->
				<!--android:background="@drawable/mini_mv_down"-->
				<!--android:layout_width="44dp"-->
				<!--android:layout_height="44dp" />-->
			<!--<TextView-->
				<!--android:textColor="#ffffff"-->
				<!--android:text="下载MV"-->
				<!--android:layout_marginTop="6dp"-->
				<!--android:layout_width="wrap_content"-->
				<!--android:layout_height="wrap_content" />-->
			<!--<TextView-->
				<!--android:textColor="#c1c1c1"-->
				<!--android:text="0"-->
				<!--android:layout_marginTop="6dp"-->
				<!--android:layout_width="wrap_content"-->
				<!--android:layout_height="wrap_content" />-->
		<!--</LinearLayout>-->
	</LinearLayout>

	<LinearLayout
		android:background="@drawable/backgr"
		android:orientation="vertical"
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="180dp">
		<LinearLayout
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="40dp">
			<TextView
				android:textSize="18sp"
				android:layout_marginLeft="10dp"
				android:textColor="#ffffff"
				android:text="我的歌单"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView
				android:textColor="#ffffff"
				android:text="()"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<LinearLayout
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:layout_marginLeft="10dp"
			android:layout_width="match_parent"
			android:layout_height="70dp">
			<ImageView
				android:background="@drawable/ic_root_favorite"
				android:layout_width="62dp"
				android:layout_height="62dp" />
			<LinearLayout
				android:gravity="clip_vertical"
				android:orientation="vertical"
				android:layout_marginLeft="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView
					android:text="我喜欢听"
					android:textColor="#ffffff"
					android:textSize="18sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView
					android:text="0首"
					android:textColor="#ffffff"
					android:textSize="16sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:layout_marginLeft="10dp"
			android:layout_width="match_parent"
			android:layout_height="70dp">
			<ImageView
				android:background="@drawable/ic_root_bg_create"
				android:layout_width="62dp"
				android:layout_height="62dp" />
			<LinearLayout
				android:gravity="clip_vertical"
				android:orientation="vertical"
				android:layout_marginLeft="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView
					android:text="新建歌单"
					android:textColor="#ffffff"
					android:textSize="18sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />

			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>